<!-- Loop over each object in the projects array -->
{{#each blogPosts as |blogPost|}}
  <div class="row mb-4 BlogPost">
    <div class="col-md-5">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        <a href="/BlogPost/{{blogPost.id}}">{{blogPost.title}}</a>
      </h2>
      <p>
        {{blogPost.content}}
      </p>
      <p>Created by
        {{blogPost.user.name}}
        on
        {{format_date blogPost.publishedAt}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{blogPost.content}}
      </p>
    </div>
  </div>
{{/each}}